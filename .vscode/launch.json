{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Paper Dashboard: Dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.local"
    },
    {
      "name": "Paper Dashboard: Render-like Start",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start -- -p ${env:PORT}",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.local",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  ]
}
