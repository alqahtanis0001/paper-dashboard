generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DealStatus {
  SCHEDULED
  RUNNING
  FINISHED
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TradeSide {
  BUY
  SELL
}

enum Role {
  USER
  ADMIN
}

enum LoginAttemptRole {
  USER
  ADMIN
}

model AuthSession {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  lastSeenAt   DateTime @default(now())
  revokedAt    DateTime?
  sessionToken String   @unique
  role         Role     @default(USER)
  isAdmin      Boolean  @default(false)

  chartPreference ChartPreference?
}

model LoginAttempt {
  id            String           @id @default(uuid())
  ipHash        String
  roleAttempted LoginAttemptRole
  success       Boolean
  createdAt     DateTime         @default(now())

  @@index([ipHash, roleAttempted, createdAt])
}

model AuditLog {
  id        String   @id @default(uuid())
  eventType String
  actorRole Role
  createdAt DateTime @default(now())
  metadata  Json

  @@index([createdAt])
}

model ChartPreference {
  id            String      @id @default(uuid())
  sessionId      String      @unique
  selectedSymbol String?
  timeframe      String?
  zoomLogical    Float?
  collapsedJson  Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  session AuthSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Wallet {
  id          String   @id @default(uuid())
  cashBalance Float    @default(10000)
  equity      Float    @default(10000)
  pnlTotal    Float    @default(0)
  updatedAt   DateTime @updatedAt

  positions Position[]
  trades    Trade[]
}

model Position {
  id         String   @id @default(uuid())
  isOpen     Boolean  @default(false)
  symbol     String
  entryPrice Float?
  entryTime  DateTime?
  sizeUsd    Float?
  walletId   String?
  wallet     Wallet?  @relation(fields: [walletId], references: [id])
  metaDealId String?
  metaDeal   Deal?    @relation(fields: [metaDealId], references: [id])
}

model Trade {
  id          String    @id @default(uuid())
  time        DateTime  @default(now())
  symbol      String
  side        TradeSide
  price       Float
  sizeUsd     Float
  pnl         Float?
  walletId    String?
  wallet      Wallet?   @relation(fields: [walletId], references: [id])
  dealId      String?
  deal        Deal?     @relation(fields: [dealId], references: [id])
  fillPrice   Float
  feeUsd      Float
  slippageUsd Float
  latencyMs   Int
}

model Deal {
  id               String     @id @default(uuid())
  symbol           String
  chainName        String
  basePrice        Float
  startTimeUtc     DateTime
  totalDurationSec Int
  dropDelaySec     Int
  dropMagnitudePct Float
  createdAt        DateTime   @default(now())
  status           DealStatus @default(SCHEDULED)

  jumps     DealJump[]
  trades    Trade[]
  signals   AiSignalLog[]
  positions Position[]
}

model DealJump {
  id               String @id @default(uuid())
  dealId           String
  deal             Deal   @relation(fields: [dealId], references: [id], onDelete: Cascade)
  riseDelaySec     Int
  riseMagnitudePct Float
  holdSec          Int
  orderIndex       Int
}

model WithdrawalRequest {
  id          String           @id @default(uuid())
  time        DateTime         @default(now())
  amount      Float
  taxPercent  Float            @default(0)
  taxAmount   Float            @default(0)
  netAmount   Float            @default(0)
  status      WithdrawalStatus @default(PENDING)
  processedAt DateTime?

  @@index([time])
  @@index([status, time])
}

model WithdrawConfig {
  id         String   @id @default("global")
  taxPercent Float    @default(5)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AiSignalLog {
  id               String    @id @default(uuid())
  time             DateTime  @default(now())
  dealId           String?
  deal             Deal?     @relation(fields: [dealId], references: [id], onDelete: SetNull)
  signalsJson      Json
  metaDecisionJson Json
  horizonSec       Int       @default(60)
  resolvedAt       DateTime?
  outcomePct       Float?
  metaCorrect      Boolean?
  hitRatesJson     Json?
}

model EngineConfig {
  id             String   @id @default("global")
  activeMarketId String   @default("BTC")
  regimeOverride String?  @default("AUTO")
  intensity      Float    @default(1.0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
